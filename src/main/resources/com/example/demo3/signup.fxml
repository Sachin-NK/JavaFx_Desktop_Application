<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo3.SignupController"
            prefHeight="700.0" prefWidth="900.0" 
            styleClass="login-container" 
            stylesheets="@login.css">

    <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               
        <VBox alignment="CENTER" spacing="0" styleClass="outer-card">
            <!-- Fish Logo -->
            <Label text="🐟" styleClass="fish-logo"/>
            
            <!-- System Title -->
            <Label text="SMART FISHERIES" styleClass="system-title"/>
            
            <!-- System Subtitle -->
            <Label text="MANAGEMENT SYSTEM" styleClass="system-subtitle"/>
            
            <!-- Signup Form Container -->
            <VBox fx:id="signupVBox" alignment="CENTER" spacing="20" styleClass="login-form">
                <!-- Username Field -->
                <VBox styleClass="form-field">
                    <TextField fx:id="usernameField" promptText="Username" styleClass="login-textfield"/>
                </VBox>
                
                <!-- Password Field -->
                <VBox styleClass="form-field">
                    <PasswordField fx:id="passwordField" promptText="Password" styleClass="login-textfield"/>
                </VBox>
                
                <!-- Confirm Password Field -->
                <VBox styleClass="form-field">
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="login-textfield"/>
                </VBox>
                
                <!-- Terms Checkbox -->
                <HBox alignment="CENTER" spacing="10" styleClass="form-field">
                    <CheckBox text="I agree to the Terms and Conditions" styleClass="terms-checkbox"/>
                </HBox>
                
                <!-- Sign Up Button -->
                <Button text="Create Account" onAction="#handleSignup" styleClass="signup-button">
                    <VBox.margin>
                        <Insets top="10" />
                    </VBox.margin>
                </Button>
                
                <!-- Login Link -->
                <Button fx:id="backToLoginButton" text="Already have an account? Login" onAction="#handleBackToLogin" styleClass="login-link"/>
                
                <!-- Error Message Area -->
                <Label fx:id="errorMessage" styleClass="error-message" managed="false" visible="false"/>
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>